description "{{app_name}} Service"
author "Jake Gaylor"

start on runlevel [2345]
stop on shutdown

# If the process quits unexpectadly trigger a respawn
respawn

# Start the process
exec start-stop-daemon --start --chuid ubuntu --make-pidfile --pidfile {{api_dir}}/node-upstart.pid --exec /usr/bin/node -- {{api_dir}}/api-app/index.js >> /var/log/{{app_name}}.log 2>&1