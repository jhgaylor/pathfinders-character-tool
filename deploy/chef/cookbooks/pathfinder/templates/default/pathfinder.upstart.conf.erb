description "<%= @name %> Service"
author "Jake Gaylor"

start on runlevel [2345]
stop on shutdown

# If the process quits unexpectadly trigger a respawn
respawn

# Start the process
exec start-stop-daemon --start --chuid ubuntu --make-pidfile --pidfile <%= @src_dir %>/node-upstart.pid --exec /usr/bin/node -- <%= @src_dir %>/index.js >> /var/log/<%= @name %>.log 2>&1